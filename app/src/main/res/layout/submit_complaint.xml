<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/Layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F8F8F8">

    <ImageView
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/photo23"/>

    <RelativeLayout
            android:elevation="8dp"
            android:id="@+id/part1"
            android:layout_width="340dp"
            android:layout_height="410dp"
            android:layout_below="@id/logo"
            android:layout_centerHorizontal="true"
            android:background="@drawable/start">

        <TextView
                android:id="@+id/title1"
                android:layout_width="320dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/button"
                android:elevation="4dp"
                android:enabled="false"
                android:gravity="center"
                android:text="Submit A Complaint"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="26sp"/>

        <RelativeLayout
                android:layout_below="@id/title1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:text="Please write your complaint here :"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16dp"
                    android:textStyle="bold"/>

            <EditText
                    android:id="@+id/complaint"
                    android:layout_width="320dp"
                    android:layout_height="260dp"
                    android:layout_below="@id/text1"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="24dp"
                    android:background="@drawable/input"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:hint="Please write your complaint here"
                    android:inputType="text"
                    android:selectAllOnFocus="true"
                    android:textColor="#000000"
                    android:textSize="16sp"/>

            <Button
                    android:id="@+id/submit"
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/complaint"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/danger"
                    android:elevation="4dp"
                    android:text="Submit"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="26dp"/>

        </RelativeLayout>
    </RelativeLayout>

    <TextView
            android:translationZ="80dp"
            android:id="@+id/alert"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="-60dp"
            android:elevation="8dp"
            android:text=""
            android:layout_centerHorizontal="true"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="18sp"/>

</RelativeLayout>
