<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/Layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F8F8F8">

    <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:src="@drawable/logo_transparent"/>

    <RelativeLayout
            android:id="@+id/menu1"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/start"
            android:elevation="8dp"
            android:padding="6dp">

        <ImageView
                android:id="@+id/img_menu1"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/photo25"/>

        <TextView
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_below="@id/img_menu1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dp"
                android:elevation="4dp"
                android:enabled="false"
                android:gravity="center"
                android:text="Manage\nUniversities"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="22dp"
                android:textStyle="bold"/>


    </RelativeLayout>


    <RelativeLayout
            android:id="@+id/menu2"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="14dp"
            android:background="@drawable/start"
            android:elevation="8dp"
            android:padding="6dp">

        <ImageView
                android:id="@+id/img_menu2"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/photo33"/>

        <TextView
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_below="@id/img_menu2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dp"
                android:elevation="4dp"
                android:enabled="false"
                android:gravity="center"
                android:text="Manage\nEstablishments"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="22dp"
                android:textStyle="bold"/>


    </RelativeLayout>


    <RelativeLayout
            android:id="@+id/menu3"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/menu1"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/start"
            android:elevation="8dp"
            android:padding="6dp">

        <ImageView
                android:id="@+id/img_menu3"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/photo32"/>

        <TextView
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_below="@id/img_menu3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dp"
                android:elevation="4dp"
                android:enabled="false"
                android:gravity="center"
                android:text="View\nStudents"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="22dp"
                android:textStyle="bold"/>


    </RelativeLayout>


    <RelativeLayout
            android:id="@+id/menu4"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/menu2"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="14dp"
            android:background="@drawable/start"
            android:elevation="8dp"
            android:padding="6dp">

        <ImageView
                android:id="@+id/img_menu4"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/photo29"/>

        <TextView
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_below="@id/img_menu4"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dp"
                android:elevation="4dp"
                android:enabled="false"
                android:gravity="center"
                android:text="Generate\nGrant Lists"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="22dp"
                android:textStyle="bold"/>
    </RelativeLayout>


    <Button
            android:id="@+id/LogOut"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_below="@id/menu4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button"
            android:elevation="4dp"
            android:text="Log Out"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="26dp"/>


</RelativeLayout>
